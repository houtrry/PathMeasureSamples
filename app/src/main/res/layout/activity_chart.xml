<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.houtrry.pathmeasuresamples.component.activity.ChartActivity">


    <com.houtrry.pathmeasuresamples.component.widget.ChartWaveView
        android:id="@+id/chartWaveView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/chartWave2View"
        android:background="@color/colorAccent"
        />

    <com.houtrry.pathmeasuresamples.component.widget.ChartWave2View
        android:id="@+id/chartWave2View"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chartWave2View"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent"
        />

</android.support.constraint.ConstraintLayout>
